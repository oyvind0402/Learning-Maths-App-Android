<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:duplicateParentState="true"
    android:fitsSystemWindows="true"
    android:fontFamily="sans-serif"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="67dp"
        android:layout_marginBottom="75dp"
        android:background="?attr/colorPrimary"
        android:fontFamily="match_parent"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:backgroundTint="@color/toolbar"
        app:titleTextColor="#FFFFFF">

        <TextView
            android:id="@+id/toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="match_parent"
            android:text="@string/app_name"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:contentDescription="@string/app_icon"
            app:srcCompat="@drawable/icon" />

    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-55dp"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/regnestykke"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="2"
            android:gravity="center"
            android:textSize="60sp" />

        <TextView
            android:id="@+id/svar"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="60sp" />
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/covered_by_your_grace"
            android:textSize="25sp"

            android:insetLeft="10dp"
            android:insetRight="10dp"
            android:insetBottom="10dp"
            android:text="7"
            app:backgroundTint="@color/kalkulatorKnap" />

        <Button
            android:id="@+id/button8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/covered_by_your_grace"
            android:textSize="25sp"

            android:insetLeft="10dp"
            android:insetRight="10dp"
            android:insetBottom="10dp"
            android:text="8"
            app:backgroundTint="@color/kalkulatorKnap"/>

        <Button
            android:id="@+id/button9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/covered_by_your_grace"
            android:textSize="25sp"
            android:insetLeft="10dp"
            android:insetRight="10dp"
            android:insetBottom="10dp"
            android:text="9"
            app:backgroundTint="@color/kalkulatorKnap"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/covered_by_your_grace"
            android:textSize="25sp"
            android:insetLeft="10dp"
            android:insetRight="10dp"
            android:insetBottom="10dp"
            android:text="4"
            app:backgroundTint="@color/kalkulatorKnap"/>

        <Button
            android:id="@+id/button5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/covered_by_your_grace"
            android:textSize="25sp"
            android:insetLeft="10dp"
            android:insetRight="10dp"
            android:insetBottom="10dp"
            android:text="5"
            app:backgroundTint="@color/kalkulatorKnap"/>

        <Button
            android:id="@+id/button6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/covered_by_your_grace"
            android:textSize="25sp"
            android:insetLeft="10dp"
            android:insetRight="10dp"
            android:insetBottom="10dp"
            android:text="6"
            app:backgroundTint="@color/kalkulatorKnap"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/covered_by_your_grace"
            android:textSize="25sp"
            android:insetLeft="10dp"
            android:insetRight="10dp"
            android:insetBottom="10dp"
            android:text="1"
            app:backgroundTint="@color/kalkulatorKnap"/>

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/covered_by_your_grace"
            android:textSize="25sp"
            android:insetLeft="10dp"
            android:insetRight="10dp"
            android:insetBottom="10dp"
            android:text="2"
            app:backgroundTint="@color/kalkulatorKnap"/>

        <Button
            android:id="@+id/button3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/covered_by_your_grace"
            android:textSize="25sp"
            android:insetLeft="10dp"
            android:insetRight="10dp"
            android:insetBottom="10dp"
            android:text="3"
            app:backgroundTint="@color/kalkulatorKnap"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button0"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="@font/covered_by_your_grace"
            android:textSize="25sp"
            android:insetLeft="10dp"
            android:insetRight="10dp"
            android:insetBottom="10dp"
            android:text="0"
            android:layout_width="0dp"
            app:backgroundTint="@color/kalkulatorKnap"/>

        <Button
            android:id="@+id/buttonNullstille"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:fontFamily="@font/covered_by_your_grace"
            android:insetLeft="10dp"
            android:insetRight="10dp"
            android:insetBottom="10dp"
            android:text="Fjern"
            app:backgroundTint="@color/fjernKnap"
            />


        <Button
            android:id="@+id/buttonEquals"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:fontFamily="@font/covered_by_your_grace"
            android:insetLeft="10dp"
            android:insetRight="10dp"
            android:insetBottom="10dp"
            android:onClick="svar"
            android:text="Enter"
            app:backgroundTint="@color/enter"
            />
    </LinearLayout>

    <Button
        android:id="@+id/start_spill_knapp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/covered_by_your_grace"
        android:insetLeft="140dp"
        android:insetRight="140dp"
        android:text="@string/start_spill"
        android:onClick="startSpill"/>


</LinearLayout>